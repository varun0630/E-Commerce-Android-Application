<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F3"
    app:layout_marginBaseline="10dp"
    tools:context=".Registration">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/group" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-10dp"
                app:srcCompat="@drawable/registertrationheading" />

            <EditText
                android:id="@+id/name"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/loginusername"
                android:ems="10"
                android:hint="     Enter Full Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/loginusername"
                android:ems="10"
                android:hint="     Enter Email"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/mobilaNo"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/loginusername"
                android:ems="10"
                android:hint="     Enter Phone No."
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/communityName"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/loginusername"
                android:ems="10"
                android:hint="     Enter Community Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/villaNo"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/loginusername"
                android:ems="10"
                android:hint="     Enter Villa No."
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/password"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/loginusername"
                android:ems="10"
                android:hint="     Enter Password"
                android:inputType="textPassword" />

            <ImageButton
                android:id="@+id/registerButton"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="50dp"
                app:srcCompat="@drawable/register" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:onClick="loginPage"
                android:src="@drawable/signintext" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="205dp"
                android:layout_marginTop="-800dp"
                app:srcCompat="@drawable/imagelogo" />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


